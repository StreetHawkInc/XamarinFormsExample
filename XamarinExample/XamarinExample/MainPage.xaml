<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinExample"
             x:Class="XamarinExample.MainPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="App Key:" HorizontalOptions="Start" />
                <Entry x:Name="textboxAppKey" Text="XamHawk_bison" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="GCM (Android):" HorizontalOptions="Start" />
                <Entry x:Name="textboxGCM" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <Button Text="Set up" Clicked="buttonSetupClick" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>